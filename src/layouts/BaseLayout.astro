---
import { SITE } from "../config";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SchemaOrg from "../components/SchemaOrg.astro";
import PWAInstallBanner from "../components/PWAInstallBanner.tsx";
import OfflineIndicator from "../components/OfflineIndicator.tsx";
import BackToTop from "../components/BackToTop.tsx";
import KeyboardShortcuts from "../components/KeyboardShortcuts.tsx";
import Cursor from "../components/Cursor.tsx";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  type?: "website" | "article";
  publishedDate?: Date;
  modifiedDate?: Date;
  tags?: string[];
  author?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  ogImage = "/og-default.png",
  type = "website",
  publishedDate,
  modifiedDate,
  tags,
  author = "Augusto Melara",
  noindex = false,
} = Astro.props;

const pageTitle = title ? `${title} | VitoCipher` : SITE.title;
const pageDescription = description || SITE.description;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = ogImage.startsWith("http")
  ? ogImage
  : new URL(ogImage, Astro.site).href;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <script is:inline>
      const theme = localStorage.getItem("VitoCipher-theme");
      if (theme === "light") {
        document.documentElement.classList.remove("dark");
        document.documentElement.classList.add("light");
      } else {
        document.documentElement.classList.add("dark");
        document.documentElement.classList.remove("light");
      }
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <meta name="author" content={author} />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="robots"
      content={noindex
        ? "noindex,nofollow"
        : "index,follow,max-snippet:-1,max-image-preview:large"}
    />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title || SITE.title} />
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content="VitoCipher" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Article meta (when applicable) -->
    {
      type === "article" && publishedDate && (
        <meta
          property="article:published_time"
          content={publishedDate.toISOString()}
        />
      )
    }
    {
      type === "article" && modifiedDate && (
        <meta
          property="article:modified_time"
          content={modifiedDate.toISOString()}
        />
      )
    }
    {type === "article" && <meta property="article:author" content={author} />}
    {tags?.map((tag) => <meta property="article:tag" content={tag} />)}

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="apple-mobile-web-app-title" content="VitoCipher" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />

    <!-- Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />

    <title>{pageTitle}</title>
    <ViewTransitions fallback="none" />

    <!-- Analytics -->
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="bf4d136f-5e83-46a2-a9c9-c6aba387dc49"></script>

    <script>
      document.addEventListener("astro:page-load", () => {
        window.dispatchEvent(new CustomEvent("VitoCipher:page-changed"));
        document.body.style.overflow = "";
      });
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-bg">
    <Header transition:persist />

    <!-- WebSite Schema -->
    <SchemaOrg
      schema={{
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: "VitoCipher",
        url: "https://VitoCipher.vercel.app",
        description: "Ideas que no se callan.",
        author: {
          "@type": "Person",
          name: "Augusto Melara",
          url: "https://VitoCipher.vercel.app/about",
        },
        potentialAction: {
          "@type": "SearchAction",
          target: {
            "@type": "EntryPoint",
            urlTemplate:
              "https://VitoCipher.vercel.app/blog?q={search_term_string}",
          },
          "query-input": "required name=search_term_string",
        },
      }}
    />

    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <PWAInstallBanner client:load />
    <OfflineIndicator client:load />
    <BackToTop client:load />
    <KeyboardShortcuts client:load />
    <Cursor client:load />
  </body>
</html>
