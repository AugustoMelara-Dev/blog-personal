---
import { SITE } from "../config";
import BaseLayout from "./BaseLayout.astro";
import TagBadge from "../components/TagBadge.astro";
import ShareButton from "../components/ShareButton.tsx";
import ReadingProgress from "../components/ReadingProgress.tsx";
import StoryGenerator from "../components/StoryGenerator.tsx";
import Newsletter from "../components/Newsletter.tsx";
import ReadingMode from "../components/ReadingMode.tsx";
import TableOfContents from "../components/TableOfContents.tsx";
import { format } from "date-fns";
import { es } from "date-fns/locale";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags: string[];
  readingTime: string;
  quote?: string;
  versiculo?: string;
  prevPost?: { slug: string; title: string } | null;
  nextPost?: { slug: string; title: string } | null;
  ogImage?: string;
  type?: "website" | "article";
}

const {
  title,
  description,
  pubDate,
  tags,
  readingTime,
  quote,
  versiculo,
  prevPost,
  nextPost,
  ogImage,
  type = "article",
} = Astro.props;

const formattedDate = format(pubDate, "d 'de' MMMM, yyyy", { locale: es });

const schemaData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description: description,
  datePublished: pubDate.toISOString(),
  author: {
    "@type": "Person",
    name: SITE.author,
  },
  publisher: {
    "@type": "Organization",
    name: SITE.title,
  },
});
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  type={type}
>
  <script type="application/ld+json" set:html={schemaData} />

  <ReadingProgress client:load />
  <ReadingMode client:load />

  <article class="px-6 py-16 md:py-24">
    <div class="mx-auto max-w-6xl">
      <div
        class="lg:grid lg:grid-cols-[minmax(0,65ch)_220px] lg:gap-12 xl:gap-16 justify-center items-start"
      >
        <div class="min-w-0">
          <!-- Header -->
          <header class="mb-8">
            <!-- Tags above title -->
            {
              tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-6">
                  {tags.map((tag) => (
                    <TagBadge tag={tag} />
                  ))}
                </div>
              )
            }

            <h1
              class="text-4xl md:text-5xl font-black text-[#f5f5f5] leading-[1.1] mb-6"
              style="max-width: 20ch;"
            >
              {title}
            </h1>

            <!-- Metadata line -->
            <div
              class="flex flex-wrap items-center gap-3 text-sm text-[#525252] mb-8"
            >
              <time datetime={pubDate.toISOString()}>
                {formattedDate}
              </time>
              <span class="text-[#1a1a1a]">¬∑</span>
              <span>{readingTime}</span>
            </div>

            <!-- Vers√≠culo block -->
            {
              versiculo && (
                <div class="flex items-start gap-3 bg-[#0f0f0f] border border-[#1a1a1a] rounded-lg p-4 mb-8">
                  <span class="text-lg flex-shrink-0">üìñ</span>
                  <p class="text-sm italic text-[#737373] leading-relaxed">
                    {versiculo}
                  </p>
                </div>
              )
            }

            <!-- Quote block -->
            {
              quote && (
                <div class="border-l-[3px] border-lime-400 bg-[#111111] pl-6 pr-4 py-5 rounded-r-lg mb-8">
                  <p class="text-xl font-medium text-[#f5f5f5] italic leading-relaxed">
                    "{quote}"
                  </p>
                </div>
              )
            }

            <!-- Separator -->
            <div class="w-full h-px bg-[#1a1a1a] my-12"></div>
          </header>

          <!-- Mobile ToC -->
          <div class="block lg:hidden mb-12 not-prose">
            <TableOfContents client:load isMobile={true} />
          </div>

          <!-- Content -->
          <div class="prose prose-lg max-w-none">
            <slot />
          </div>

          <!-- Post Footer -->
          <div class="mt-16">
            <!-- Separator -->
            <div class="w-full h-px bg-[#1a1a1a] mb-12"></div>

            <!-- Additional Series/Related injected via slot from [slug].astro -->

            <!-- Share section -->
            {
              quote && (
                <div class="mb-12 p-6 bg-[#0f0f0f] border border-[#1a1a1a] rounded-xl">
                  <p class="text-sm text-[#525252] uppercase tracking-widest mb-4">
                    ¬øTe reson√≥ algo?
                  </p>
                  <div class="flex flex-wrap items-center gap-4">
                    <StoryGenerator client:load texto={quote} />
                    <ShareButton client:load url={Astro.url.href} />
                  </div>
                </div>
              )
            }

            <!-- Newsletter -->
            <div
              class="mb-12 border border-[#1f1f1f] rounded-lg bg-[#0a0a0a] p-8"
            >
              <div class="mb-6">
                <h3 class="text-xl font-bold text-[#f5f5f5] mb-2">
                  ¬øTe ha gustado?
                </h3>
                <p class="text-[#a3a3a3]">
                  Suscr√≠bete y recibe mis pr√≥ximos escritos directamente en tu
                  email.
                </p>
              </div>
              <Newsletter client:load />
            </div>

            <!-- Prev / Next -->
            <nav class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {
                prevPost && (
                  <a
                    href={`/blog/${prevPost.slug}`}
                    class="group p-5 rounded-lg border border-[#1a1a1a] hover:border-[#2a2a2a] bg-[#0f0f0f] transition-colors duration-200"
                  >
                    <span class="text-xs text-[#525252] uppercase tracking-wider">
                      ‚Üê Anterior
                    </span>
                    <p class="text-[#f5f5f5] font-medium mt-1 group-hover:text-lime-400 transition-colors duration-200 line-clamp-2">
                      {prevPost.title}
                    </p>
                  </a>
                )
              }
              {
                nextPost && (
                  <a
                    href={`/blog/${nextPost.slug}`}
                    class="group p-5 rounded-lg border border-[#1a1a1a] hover:border-[#2a2a2a] bg-[#0f0f0f] transition-colors duration-200 sm:text-right sm:col-start-2"
                  >
                    <span class="text-xs text-[#525252] uppercase tracking-wider">
                      Siguiente ‚Üí
                    </span>
                    <p class="text-[#f5f5f5] font-medium mt-1 group-hover:text-lime-400 transition-colors duration-200 line-clamp-2">
                      {nextPost.title}
                    </p>
                  </a>
                )
              }
            </nav>
          </div>
        </div>

        <aside class="hidden lg:block sticky top-24 pt-4">
          <TableOfContents client:load />
        </aside>
      </div>
    </div>
  </article>
</BaseLayout>
