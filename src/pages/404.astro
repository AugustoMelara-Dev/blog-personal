---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Página no encontrada">
  <div
    class="min-h-[80vh] flex flex-col items-center justify-center px-6 relative overflow-hidden"
  >
    <!-- Número decorativo -->
    <span
      class="absolute text-[12rem] md:text-[16rem] font-black text-[#1a1a1a] select-none pointer-events-none leading-none"
      aria-hidden="true"
    >
      404
    </span>

    <!-- Contenido -->
    <div class="relative z-10 text-center">
      <h1 class="text-2xl md:text-3xl font-bold text-[#f5f5f5] mb-4">
        Página no encontrada
      </h1>
      <p class="text-base text-[#525252] mb-10 max-w-md mx-auto">
        Esta idea todavía no existe. O ya no.
      </p>

      <div class="flex flex-col items-center gap-4">
        <a
          href="/"
          class="inline-block px-8 py-3 bg-lime-400 text-[#0a0a0a] font-semibold rounded-md hover:bg-lime-300 transition-colors duration-200"
        >
          Volver al inicio
        </a>
        <a
          href="/frases"
          class="text-sm text-[#525252] hover:text-lime-400 transition-colors duration-200"
        >
          Ver todas las frases →
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
