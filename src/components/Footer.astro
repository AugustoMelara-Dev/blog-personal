---
import { SITE } from "../config";
import Icon from "./icons/Icon.tsx";
---

<footer class="border-t border-[#1a1a1a] bg-[#0a0a0a]">
  <div class="max-w-5xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
      <!-- Columna 1: Marca -->
      <div>
        <a href="/" class="inline-block mb-4">
          <span class="text-[#f5f5f5] font-[800] text-xl">Vito</span><span
            class="text-lime-400 font-[800] text-xl">Logic</span
          >
        </a>
        <p class="text-sm text-[#525252] mb-6">Ideas que no se callan.</p>
        <div class="flex items-center gap-4">
          <!-- Twitter/X -->
          <a
            href="#"
            class="text-[#525252] hover:text-lime-400 transition-colors"
            aria-label="Twitter"
          >
            <Icon name="Twitter" size={18} client:load />
          </a>
          <!-- Email/Newsletter -->
          <a
            href="#"
            class="text-[#525252] hover:text-lime-400 transition-colors"
            aria-label="Email"
          >
            <Icon name="Mail" size={18} client:load />
          </a>
          <!-- GitHub -->
          <a
            href="#"
            class="text-[#525252] hover:text-lime-400 transition-colors"
            aria-label="GitHub"
          >
            <Icon name="Github" size={18} client:load />
          </a>
        </div>
      </div>

      <!-- Columna 2: Explorar -->
      <div>
        <h4
          class="text-xs uppercase text-[#525252] tracking-widest mb-4 font-medium"
        >
          Explorar
        </h4>
        <nav class="flex flex-col gap-3">
          <a
            href="/blog"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Blog</a
          >
          <a
            href="/frases"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Frases</a
          >
          <a
            href="/biblia"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Biblia</a
          >
          <a
            href="/series"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Series</a
          >
          <a
            href="/mapa"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Mapa</a
          >
          <a
            href="/archivo"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Archivo</a
          >
          <a
            href="/empieza"
            class="text-sm text-[#737373] hover:text-[#f5f5f5] transition-colors"
            >Empieza aquí</a
          >
        </nav>
      </div>

      <!-- Columna 3: Info -->
      <div>
        <h4
          class="text-xs uppercase text-[#525252] tracking-widest mb-4 font-medium"
        >
          VitoLogic
        </h4>
        <div class="flex flex-col gap-3">
          <p class="text-sm text-[#525252]">Escrito por Augusto Melara</p>
          <a
            href="/rss.xml"
            class="text-sm text-[#737373] hover:text-lime-400 transition-colors flex items-center gap-2"
          >
            <Icon name="Rss" size={18} client:load />
            RSS Feed
          </a>
          <a
            href="/stats"
            class="text-sm text-[#737373] hover:text-lime-400 transition-colors flex items-center gap-2"
          >
            <Icon name="BarChart2" size={12} client:load />
            Stats del blog
          </a>
          <p class="text-xs text-[#2a2a2a]">
            Hecho con Astro y demasiado café ☕
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="flex flex-col sm:flex-row items-center justify-between gap-4 mt-12 pt-6 border-t border-[#1a1a1a]"
    >
      <span class="text-xs text-[#2a2a2a]">© 2026 VitoLogic</span>
      <span class="text-xs text-[#2a2a2a]">Todos los derechos reservados</span>
    </div>
  </div>
</footer>
